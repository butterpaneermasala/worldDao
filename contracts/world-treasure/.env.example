# 🔐 Treasury Contract Environment Configuration
# Copy this to .env and fill in your values

# 🔑 Deployment Account Private Key (get from MetaMask)
# ⚠️ NEVER commit this to Git! Keep it secure!
# Format: 0x1234567890abcdef...
PRIVATE_KEY=

# 🌐 RPC URLs for World Chain networks
# Get from Alchemy or other provider
WORLDCHAIN_RPC_URL=https://worldchain-mainnet.g.alchemy.com/v2/YOUR-API-KEY
WORLDCHAIN_SEPOLIA_RPC_URL=https://worldchain-sepolia.g.alchemy.com/v2/YOUR-API-KEY

# 🔗 Alchemy API Key (for RPC access)
ALCHEMY_API_KEY=

# 🔍 Block Explorer API Key (for contract verification)
# For now, any string works as World Chain uses Blockscout
WORLDSCAN_API_KEY=abc123abc123abc123abc123abc123abc1

# 🏛️ Governor Contract Address (deploy WorldChainGovernor first)
# Leave empty to use deployer address as temporary governor
GOVERNOR_ADDRESS=

# 🧪 Testing Configuration
# Set to "true" to send a small test deposit after deployment
TEST_DEPOSIT=false

# ⛽ Gas Configuration (optional)
# Set to "true" to generate gas reports during testing
REPORT_GAS=true

# 📊 Deployment Configuration
# Network to deploy to: worldchain | worldchainSepolia | localhost
NETWORK=worldchainSepolia